// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
  "name": "SHAP Authorship Analysis",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile

  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "mounts": [
    "type=volume,source=devcontainer-nltk-data,target=/home/vscode/nltk_data",
    "type=volume,source=devcontainer-uoa-thesis-2014-2017,target=/workspaces/shap-authorship-analysis-demo/data/uoa-thesis-2014-2017"
  ],

  "containerEnv": {
    "POETRY_VIRTUALENVS_IN_PROJECT": "true"
  },

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": true,
      "optimize": true,
      "installJupyterlab": true,
      "version": "3.11"
    },
    "ghcr.io/devcontainers-contrib/features/poetry:2": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "christian-kohler.path-intellisense",
        "DavidAnson.vscode-markdownlint",
        "donjayamanne.git-extension-pack",
        "donjayamanne.python-extension-pack",
        "esbenp.prettier-vscode",
        "felipecaputo.git-project-manager",
        "GitHub.copilot",
        "GitHub.vscode-pull-request-github",
        "GrapeCity.gc-excelviewer",
        "Gruntfuggly.todo-tree",
        "mechatroner.rainbow-csv",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.gather",
        "ms-python.isort",
        "ms-python.mypy-type-checker",
        "ms-python.pylint",
        "ms-toolsai.jupyter-hub",
        "oderwat.indent-rainbow",
        "redhat.fabric8-analytics",
        "seatonjiang.gitmoji-vscode",
        "streetsidesoftware.code-spell-checker",
        "tamasfe.even-better-toml",
        "VisualStudioExptTeam.vscodeintellicode-completions",
        "yzane.markdown-pdf",
        "yzhang.markdown-all-in-one",
        "ms-toolsai.datawrangler"
      ]
    }
  },

  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": {
    "submodule": "git submodule init && git submodule update",
    "poetry": "poetry install",
    "nltk": "sudo chmod 777 -R /home/vscode/nltk_data",
    "thesis-data": "sudo chmod 777 -R /workspaces/shap-authorship-analysis-demo/data/uoa-thesis-2014-2017"
  }

  // Configure tool-specific properties.
  // "customizations": {},

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
